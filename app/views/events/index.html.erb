<h1>Listing events</h1>

<table>
  <thead>
    <tr>
      <th>From date</th>
      <th>To date</th>
      <th>Reason</th>
      <th>Status</th>
      <th>From user</th>
      <th>To user</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.from_date %></td>
        <td><%= event.to_date %></td>
        <td><%= event.reason %></td>
        <td><%= event.status %></td>
        <td><%= event.from_user_id %></td>
        <td><%= event.to_user_id %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

